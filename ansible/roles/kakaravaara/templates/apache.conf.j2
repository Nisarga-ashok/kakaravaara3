<VirtualHost *:80>
    ServerName {{ hostname }}
    ServerAlias www.{{ hostname }}
{% if kakara_https %}
    RedirectPermanent / https://{{ hostname }}/
</VirtualHost>

<VirtualHost *:443>
    ServerName {{ hostname }}
    ServerAlias www.{{ hostname }}
{% endif %}
    ServerAdmin webmaster@{{ hostname }}

    DocumentRoot {{ web_root }}

    Alias /robots.txt {{ web_root }}/robots.txt
    Alias /favicon.ico {{ web_root }}/favicon.ico
    Alias /static {{ web_root }}
    Alias /media {{ media_root }}

    <Directory {{ web_root }}>
        Require all granted
        Options -MultiViews -Indexes
    </Directory>

    <Directory {{ media_root }}>
        Require all granted
        Options -MultiViews -Indexes
    </Directory>

    ProxyPass /static !
    ProxyPass /media !
    ProxyPass / uwsgi://127.0.0.1:3032/
{% if kakara_https %}
    SSLEngine on
    SSLCertificateFile /etc/letsencrypt/live/{{ hostname }}/cert.pem
    SSLCertificateKeyFile /etc/letsencrypt/live/{{ hostname }}/privkey.pem
    SSLCertificateChainFile /etc/letsencrypt/live/{{ hostname }}/chain.pem
{% endif %}
</VirtualHost>
